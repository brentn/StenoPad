<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="400dp"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/top_bank"
            android:layout_weight="1"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="S"
                android:id="@+id/S"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="T"
                android:id="@+id/T"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="P"
                android:id="@+id/P"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="H"
                android:id="@+id/H"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:phoneNumber="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="-5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:id="@+id/special_keys">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="#"
                        android:id="@+id/num"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/key"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="-5dp" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2" >

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:id="@+id/settings"
                            android:layout_gravity="center_horizontal|top" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="*"
                        android:id="@+id/star"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/key"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:linksClickable="true"
                        android:layout_marginTop="-5dp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="F"
                android:id="@+id/f"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="P"
                android:id="@+id/p"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="L"
                android:id="@+id/l"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="T"
                android:id="@+id/t"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:phoneNumber="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="D"
                android:id="@+id/d"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:phoneNumber="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="-5dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/gutter"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bottom_bank"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="S"
                android:id="@+id/S"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="K"
                android:id="@+id/K"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="W"
                android:id="@+id/W"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="R"
                android:id="@+id/R"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:id="@+id/vowel_bank" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="A"
                    android:id="@+id/A"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="-5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="O"
                    android:id="@+id/O"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="-5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="E"
                    android:id="@+id/e"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="-5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="U"
                    android:id="@+id/u"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="-5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="R"
                android:id="@+id/r"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="B"
                android:id="@+id/b"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="G"
                android:id="@+id/g"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="S"
                android:id="@+id/s"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:phoneNumber="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Z"
                android:id="@+id/z"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/key"
                android:phoneNumber="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="-5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>