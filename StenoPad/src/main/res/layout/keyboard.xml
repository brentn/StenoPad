<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:alpha="0"
        android:background="@android:color/transparent"
        android:id="@+id/input_area"></FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candidates_area"
        android:background="@android:color/background_dark"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/holo_blue_light" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/top_bank"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:paddingTop="7dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="S"
            android:id="@+id/S"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="T"
            android:id="@+id/T"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="P"
            android:id="@+id/P"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="H"
            android:id="@+id/H"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:phoneNumber="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="-5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:id="@+id/special_keys">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="#"
                    android:id="@+id/num"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="-5dp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3" >

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/settings"
                        android:layout_gravity="center_horizontal|top" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:id="@+id/star"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/key"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:linksClickable="true"
                    android:layout_marginTop="-5dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="F"
            android:id="@+id/f"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="P"
            android:id="@+id/p"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="L"
            android:id="@+id/l"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="T"
            android:id="@+id/t"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:phoneNumber="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="D"
            android:id="@+id/d"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:phoneNumber="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="-5dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/gutter"
        android:background="@android:color/darker_gray"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/bottom_bank"
        android:layout_weight="1"
        android:background="@android:color/darker_gray">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="S"
            android:id="@+id/S"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="K"
            android:id="@+id/K"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="W"
            android:id="@+id/W"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="R"
            android:id="@+id/R"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:id="@+id/thumbs">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/vowel_bank" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="A"
                    android:id="@+id/A"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="-5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="O"
                    android:id="@+id/O"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="-5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="E"
                    android:id="@+id/e"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="-5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="U"
                    android:id="@+id/u"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/vowel_key"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="-5dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="R"
            android:id="@+id/r"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="B"
            android:id="@+id/b"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="G"
            android:id="@+id/g"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="S"
            android:id="@+id/s"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:phoneNumber="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Z"
            android:id="@+id/z"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:phoneNumber="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="-5dp" />
    </LinearLayout>

</LinearLayout>